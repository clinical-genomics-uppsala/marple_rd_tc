        )
    config:
        config


use rule vep from annotation as annotation_vep


module cnv_sv:
    snakefile:
        get_module_snakefile(
            config,
            "hydra-genetics/cnv_sv",
            path="workflow/Snakefile",
            tag=config["modules"]["cnv_sv"],
        )
    config:
